<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="ozog.szumlanski.development.organizer.AddTaskActivity">

    <TextView
        android:id="@+id/titleAddTask"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add New Task"
        android:textSize="24sp"

        android:layout_centerHorizontal="true"
        android:layout_marginTop="45dp"
        />

    <EditText
        android:id="@+id/taskContentInput"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="Your task..."

        android:layout_centerHorizontal="true"
        android:layout_below="@+id/titleAddTask"
        android:layout_marginTop="45dp"
        />

    <Button
        android:id="@+id/btnAdd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="createTask"
        android:text="Let's do that!"
        tools:layout_editor_absoluteX="129dp"
        tools:layout_editor_absoluteY="231dp"

        android:layout_centerHorizontal="true"
        android:layout_below="@+id/taskContentInput"
        android:layout_marginTop="45dp"
        />

    <EditText
        android:id="@+id/date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/btnAdd"
        android:layout_below="@+id/btnAdd"
        android:layout_marginTop="53dp"
        android:onClick="datePicker"
        android:clickable="true"
        android:ems="10"
        android:focusable="false"
        android:inputType="date" />

    <EditText
        android:id="@+id/time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/date"
        android:layout_below="@+id/date"
        android:layout_marginEnd="11dp"
        android:layout_marginTop="39dp"
        android:onClick="timePicker"
        android:clickable="true"
        android:focusable="false"
        android:ems="10"
        android:inputType="time" />

</RelativeLayout>
