<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/task_height">

    <TextView
        android:id="@+id/task_text"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/task_height"
        style="@style/AudioFileInfoOverlayText"
        android:layout_alignParentLeft="true"
        android:gravity="center_vertical"
        android:paddingLeft="8dp"
        android:textSize="@dimen/task_textsize"
        android:textColor="@color/colorPrimary"
        android:textStyle="bold" />


    <ImageButton
        android:id="@+id/done_btn"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="@drawable/check_btn"
        android:layout_toStartOf="@id/not_done_btn"
        android:layout_centerVertical="true"/>

    <ImageButton
        android:id="@+id/not_done_btn"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="@drawable/x_btn"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_marginEnd="10dp"/>

</RelativeLayout>